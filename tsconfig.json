{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
